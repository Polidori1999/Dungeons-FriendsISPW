<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.effect.ColorAdjust?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="characterPane"
            minHeight="720.0"
            minWidth="1280.0"
            style="-fx-background-color: #292932;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1">
    <children>

        <!-- Pulsante "Dungeons & Friends" (Home) -->
        <Button fx:id="goToHome"
                alignment="TOP_LEFT"
                layoutX="-8.0"
                layoutY="-3.0"
                mnemonicParsing="false"
                onAction="#onNavigationButtonClick"
                userData="home.fxml"
                prefHeight="65.0"
                prefWidth="349.0"
                style="-fx-background-color: transparent;"
                text="Dungeons &amp; Friends"
                textFill="WHITE">
            <font>
                <Font name="System Bold" size="30.0" />
            </font>
        </Button>

        <!-- Pulsante utente (User) -->
        <Button fx:id="userButton"
                layoutX="1219.0"
                layoutY="11.0"
                mnemonicParsing="false"
                onAction="#onNavigationButtonClick"
                userData="user.fxml"
                prefHeight="41.0"
                prefWidth="45.0"
                style="-fx-background-color: transparent;"
                textFill="#f80606">
            <graphic>
                <ImageView blendMode="MULTIPLY"
                           fitHeight="53.0"
                           fitWidth="44.0"
                           pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@user_icon.jpg" />
                    </image>
                    <effect>
                        <ColorAdjust contrast="1.0" hue="1.0" saturation="-1.0" />
                    </effect>
                </ImageView>
            </graphic>
        </Button>

        <!-- Elemento decorativo (pallino rosso) -->
        <AnchorPane layoutX="30.0"
                    layoutY="189.0"
                    prefHeight="15.0"
                    prefWidth="15.0"
                    style="-fx-background-color: #e90000;" />

        <!-- Tabella personaggi -->
        <TableView fx:id="tableViewChar"
                   layoutX="235.0"
                   layoutY="64.0"
                   prefHeight="522.0"
                   prefWidth="858.0"
                   style="-fx-background-color: #292932;">
            <columns>
                <TableColumn fx:id="tableViewCharName"
                             prefWidth="170.0"
                             text="Name" />
                <TableColumn fx:id="tableViewCharLevel"
                             prefWidth="80.67"
                             text="Level" />
                <TableColumn fx:id="tableViewCharClass"
                             prefWidth="171.33"
                             text="Class" />
                <TableColumn fx:id="tableViewCharRace"
                             prefWidth="128.67"
                             text="Race" />
                <!-- Colonna Edit -->
                <TableColumn fx:id="tableViewCharButton"
                             prefWidth="101.3333"
                             text="Edit">
                    <cellValueFactory>
                        <PropertyValueFactory property="editButton" />
                    </cellValueFactory>
                </TableColumn>
                <!-- Colonna Delete -->
                <TableColumn fx:id="tableViewCharDelete"
                             prefWidth="96.0"
                             text="Delete" />
                <TableColumn fx:id="tableViewCharDownloadButton"
                             prefWidth="108.0"
                             text="Download" />
            </columns>
        </TableView>

        <!-- Pulsante per creare un nuovo personaggio -->
        <!-- Se vuoi unificare e fare SOLO cambio scena, puoi usare userData="characterSheet.fxml" -->
        <Button fx:id="newCharacterButton"
                layoutX="611.0"
                layoutY="621.0"
                mnemonicParsing="false"
                onAction="#onNavigationButtonClick"
                userData="characterSheet.fxml"
                style="-fx-background-color: #e90000;"
                text="New Character"
                textFill="WHITE">
            <font>
                <Font size="15.0" />
            </font>
        </Button>

        <!-- Menu laterale (VBox) -->
        <VBox fx:id="vBox"
              layoutX="-2.0"
              layoutY="171.0"
              prefHeight="219.0"
              prefWidth="260.0">

            <!-- Pulsante MyCharacters (se Ã¨ la stessa scena potresti ometterlo, ma lo lascio come esempio) -->
            <Button fx:id="myChar"
                    mnemonicParsing="false"
                    onAction="#onNavigationButtonClick"
                    userData="characterList.fxml"
                    prefHeight="51.0"
                    prefWidth="255.0"
                    style="-fx-background-color: transparent;"
                    text="MyCharacters"
                    textFill="WHITE">
                <font>
                    <Font name="System Bold" size="17.0" />
                </font>
                <graphic>
                    <ImageView fitHeight="25.0"
                               fitWidth="25.0"
                               pickOnBounds="true"
                               preserveRatio="true">
                        <image>
                            <Image url="@d20.png" />
                        </image>
                        <effect>
                            <ColorAdjust brightness="1.0" />
                        </effect>
                    </ImageView>
                </graphic>
            </Button>

            <!-- Pulsante Join Lobby -->
            <Button fx:id="joinLobby"
                    mnemonicParsing="false"
                    onAction="#onNavigationButtonClick"
                    userData="joinLobby.fxml"
                    prefHeight="45.0"
                    prefWidth="230.0"
                    style="-fx-background-color: transparent;"
                    text="Join Lobby"
                    textFill="WHITE">
                <font>
                    <Font name="System Bold" size="17.0" />
                </font>
                <graphic>
                    <ImageView fitHeight="25.0"
                               fitWidth="25.0"
                               pickOnBounds="true"
                               preserveRatio="true">
                        <image>
                            <Image url="@coppa.png" />
                        </image>
                        <effect>
                            <ColorAdjust brightness="1.0" />
                        </effect>
                    </ImageView>
                </graphic>
                <VBox.margin>
                    <Insets left="1.0" />
                </VBox.margin>
            </Button>

            <!-- Pulsante Manage Lobby -->
            <Button fx:id="manageLobby"
                    mnemonicParsing="false"
                    onAction="#onNavigationButtonClick"
                    userData="manageLobbyList.fxml"
                    prefHeight="45.0"
                    prefWidth="260.0"
                    style="-fx-background-color: transparent;"
                    text="Manage Lobby"
                    textFill="WHITE">
                <font>
                    <Font name="System Bold" size="17.0" />
                </font>
                <graphic>
                    <ImageView fitHeight="25.0"
                               fitWidth="25.0"
                               pickOnBounds="true"
                               preserveRatio="true">
                        <image>
                            <Image url="@lucchetto.png" />
                        </image>
                        <effect>
                            <ColorAdjust brightness="1.0" />
                        </effect>
                    </ImageView>
                </graphic>
                <VBox.margin>
                    <Insets left="4.0" />
                </VBox.margin>
            </Button>

            <!-- Pulsante Consult Rules -->
            <Button fx:id="consultRules"
                    mnemonicParsing="false"
                    onAction="#onNavigationButtonClick"
                    userData="consultRules.fxml"
                    prefHeight="45.0"
                    prefWidth="255.0"
                    style="-fx-background-color: transparent;"
                    text="Consult Rules"
                    textFill="WHITE">
                <font>
                    <Font name="System Bold" size="17.0" />
                </font>
                <graphic>
                    <ImageView fitHeight="25.0"
                               fitWidth="25.0"
                               pickOnBounds="true"
                               preserveRatio="true">
                        <image>
                            <Image url="@libro.png" />
                        </image>
                        <effect>
                            <ColorAdjust brightness="1.0" />
                        </effect>
                    </ImageView>
                </graphic>
            </Button>

        </VBox>

    </children>
</AnchorPane>
