<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>

<?import javafx.scene.control.Label?>

<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="popupPane" xmlns:fx="http://javafx.com/fxml"
            fx:controller="it.uniroma2.marchidori.maininterface.boundary.ConfirmationPopupController"
            prefWidth="300" prefHeight="150"
            style="-fx-background-color: #ffffff; -fx-border-color: #000000; -fx-border-width: 1px;">

    <Label fx:id="messageLabel" layoutX="30" layoutY="20" text="Vuoi confermare l'azione?" />
    <Label fx:id="timerLabel" layoutX="140" layoutY="50" text="10s" />
    <Button fx:id="yesButton" layoutX="60" layoutY="90" text="Conferma" />
    <Button fx:id="noButton" layoutX="160" layoutY="90" text="Annulla" />
</AnchorPane>